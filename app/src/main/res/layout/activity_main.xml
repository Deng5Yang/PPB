<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/menu_bg"
    tools:context="tw.com.lccnet.dkyang.lccapp.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/interpage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/imgbus"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="busClick"
            android:src="@mipmap/bus" />

        <ImageView
            android:id="@+id/imgspeed"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@mipmap/pm25"
            android:onClick="speedClick"
            android:layout_below="@+id/imgbus"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/imgwc"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@mipmap/parking"
            android:onClick="wcClick"
            android:layout_toRightOf="@+id/imgspeed"
            android:layout_below="@+id/imgbus"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />


    </RelativeLayout>


</RelativeLayout>
